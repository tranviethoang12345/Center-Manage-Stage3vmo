{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "air-bnb"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "block-scoped-var": ["error"],
    "comma-style": ["warn", "last"], // ' , ' end of the current line
    "curly": ["warn"], // block contains only one statement
    "handle-callback-err": ["error"], //  callback pattern - catch error
    "indent": [
      "warn",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-console": ["off"]
  }
}
